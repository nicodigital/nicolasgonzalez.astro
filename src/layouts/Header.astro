---
import "../css/layout/header.css";
import Brand from "../components/Brand.astro";
import Burger from "../components/Burger.astro";
import Menu from "../components/Menu.astro";
import SocialLinks from '../components/SocialLinks.astro'
const homeUrl = import.meta.env.HOME_URL ?? '/';
---
<header class="container row py-4 mb-4" >
    
    <div class="md:col-1-3">
        <Brand width="w-40% md:w-66%" />
    </div>
    
    <div class="md:col-7-11">

        <Menu items={
            [
                ['Home', homeUrl ],
                ['About', `${homeUrl}about`],
                ['Services', '#cards'],
                ['Modal','demo','m-link'],
                ['Icons','#icons'],
                ['Contact', '#contacto']
            ]
        } />

        <Burger/>
        
    </div>



</header>
